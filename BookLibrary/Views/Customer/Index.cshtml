@model IEnumerable<BookLibrary.Models.CustomerModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Index</h2>*@

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("Index", "Customer", FormMethod.Get))
    {
        <b>Search By:</b> @Html.RadioButton("searchBy", "Name", true)<text>Name</text>
        @Html.RadioButton("searchBy", "EmailAddress")<text>EmailAddress</text>
        @Html.TextBox("search") <input type="submit" value="Search" />
    }
</p>
<table class="table" style="background-color:darkgrey">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.IDCustomer)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerSince)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BooksReturnedOnTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonthlyFeePayed)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td>No such criteria. Please try again</td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.IDCustomer)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerSince)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BooksReturnedOnTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonthlyFeePayed)
            </td>
            <td>
                @{ if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.IDCustomer })
                    } }



                @Html.ActionLink("Details", "Details", new { id = item.IDCustomer })


                @{ if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.IDCustomer })
                    }
                }
            </td>
        </tr>
    }

</table>
